<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= movie._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter contact name"
                    name="name" 
                    value="<%= movie.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Phone Number</label>
                    <input type="number" class="form-control"
                    id="authorTextField"
                    placeholder="Enter Phone Number"
                    name="year" 
                    value="<%= movie.year %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Email</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter email"
                    name="director" 
                    value="<%= movie.director %>"
                    required>
                </div>

               

               

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/movie-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>